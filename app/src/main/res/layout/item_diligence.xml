<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/heightItemScore"
    android:layout_marginTop="@dimen/marginItemScore"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/checkbox"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center|left"
                android:paddingLeft="@dimen/paddingContainer"
                android:paddingRight="@dimen/paddingContainer"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNgay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22/11/2017"
                    android:textColor="@color/colorUserInfoRight"
                    android:textSize="@dimen/textsizeItemScore" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txtSang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="K"
                    android:textColor="@color/colorUserInfoRight"
                    android:textSize="@dimen/textsizeItemScore" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txtChieu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P"
                    android:textColor="@color/colorUserInfoRight"
                    android:textSize="@dimen/textsizeItemScore" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>